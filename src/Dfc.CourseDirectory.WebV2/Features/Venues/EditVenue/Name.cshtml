@using Dfc.CourseDirectory.Core.Validation.VenueValidation
@model Dfc.CourseDirectory.WebV2.Features.Venues.EditVenue.Name.Command
@{
    ViewContext.SetLayoutData(title: "Venue name");
}

<govuk-error-summary>
    <govuk-error-summary-item asp-for="Name" />
</govuk-error-summary>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <form asp-action="Name" asp-route-venueId="@Model.VenueId">
            <govuk-character-count asp-for="Name" max-length="@Constants.NameMaxLength" rows="1">
                <govuk-character-count-label class="govuk-label--l">Venue name</govuk-character-count-label>
            </govuk-character-count>

            <div class="govuk-button-group">
                <govuk-button type="submit" class="govuk-!-margin-right-1">Continue</govuk-button>
                <a  asp-action="Details" asp-route-venueId="@Model.VenueId" class="govuk-link govuk-!-margin-left-3">Cancel</a>
            </div>
        </form>
    </div>
</div>
