@model Dfc.CourseDirectory.WebV2.Features.Venues.EditVenue.Email.Command
@{
    ViewContext.SetLayoutData(title: "Email address");
}

<govuk-error-summary>
    <govuk-error-summary-item asp-for="Email" />
</govuk-error-summary>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <form asp-action="Email" asp-route-venueId="@Model.VenueId">
            <govuk-input asp-for="Email" type="email" input-class="govuk-input--width-20">
                <govuk-input-label class="govuk-label--l">Email address</govuk-input-label>
                <govuk-input-hint>For example name@example.com</govuk-input-hint>
            </govuk-input>

            <div class="govuk-button-group">
                <govuk-button type="submit" class="govuk-!-margin-right-1">Continue</govuk-button>
                <a  asp-action="Details" asp-route-venueId="@Model.VenueId" class="govuk-link govuk-!-margin-left-3">Cancel</a>
            </div>
        </form>
    </div>
</div>
