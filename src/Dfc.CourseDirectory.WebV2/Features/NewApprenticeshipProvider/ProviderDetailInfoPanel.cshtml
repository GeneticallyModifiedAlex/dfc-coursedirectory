@model Dfc.CourseDirectory.WebV2.Features.NewApprenticeshipProvider.ProviderDetailInfoPanel.ViewModel

    <h2 class="govuk-heading-m" style="margin-bottom:0px">Contact details</h2>
<aside class="pttcd-apprenticeship-qa-info-panel pttcd-apprenticeship-qa-info-panel--first" role="complementary">
    @if (Model.AddressParts.Count > 0)
    {
        <div class="govuk-!-margin-bottom-4" id="pttcd-apprenticeship-qa-info-panel__provider-address">
            <h3 class="govuk-heading-m m20" style="margin:0px">Address</h3>
            <div class="govuk-!-font-size-16">
                @foreach (var part in Model.AddressParts)
                {
                    @part<br />
                }
            </div>
        </div>
    }
    @if (!string.IsNullOrEmpty(Model.Website))
    {
        <div class="govuk-!-margin-bottom-4" id="pttcd-apprenticeship-qa-info-panel__provider-website">
            <h3 class="govuk-heading-m m20" style="margin:0px">Web</h3>
            <div class="govuk-!-font-size-16">
                <a href="@Model.Website" rel="noreferrer" target="_blank">@Model.Website</a>
            </div>
        </div>
    }
    @if (!string.IsNullOrEmpty(Model.ContactName))
    {
        <div class="govuk-!-margin-bottom-4" id="pttcd-apprenticeship-qa-info-panel__provider-contact-name">
            <h3 class="govuk-heading-m m20" style="margin:0px">Contact name</h3>
            <div class="govuk-!-font-size-16">
                @Model.ContactName
            </div>
        </div>
    }
    @if (!string.IsNullOrEmpty(Model.Email))
    {
        <div class="govuk-!-margin-bottom-4" id="pttcd-apprenticeship-qa-info-panel__provider-email">
            <h3 class="govuk-heading-m m20" style="margin:0px">Email</h3>
            <div class="govuk-!-font-size-16">
                <a href="mailto:@Model.Email">@Model.Email</a>
            </div>
        </div>
    }
    @if (!string.IsNullOrEmpty(Model.Telephone))
    {
        <div class="govuk-!-margin-bottom-4" id="pttcd-apprenticeship-qa-info-panel__provider-telephone">
            <h3 class="govuk-heading-m m20" style="margin:0px">Telephone</h3>
            <div class="govuk-!-font-size-16">
                @Model.Telephone
            </div>
        </div>
    }
</aside>
