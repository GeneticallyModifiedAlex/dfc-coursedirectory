@using Dfc.CourseDirectory.Web.ViewComponents.PostCodeSearch
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Dfc.CourseDirectory.Web.ViewComponents.AddVenue.AddVenueModel;

<form id="postCodeSearchResultForm" asp-controller="Venue" asp-action="ConfirmSelection" method="post">
    <div class="add-venue">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-full">
                <div class="govuk-form-group" style="clear:both;">

                    <label class="govuk-label" for="address-postcode">
                        Venue name
                    </label>
                    <span asp-validation-for="VenueName"></span>

                    <input class="govuk-input" asp-for="VenueName"
                           autocomplete="off"
                           type="text"
                           value="@Model.VenueName" />

                </div>





                <div id="PostCodeSearchContainer">
                    @await Component.InvokeAsync(nameof(PostCodeSearch), Model)
                </div>


                <div class="govuk-form-group">
                    <button type="submit" class="govuk-button" id="">
                        Continue
                    </button>

                </div>

            </div>

        </div>

    </div>
</form>