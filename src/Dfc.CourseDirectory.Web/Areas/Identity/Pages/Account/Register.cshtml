@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-xl">Create a new account.</h1>
        <p class="govuk-body">This is a paragraph inside a two-thirds wide column</p>
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="govuk-form-group">
                <label class="govuk-label" asp-for="Input.UserName"></label>
                <input asp-for="Input.UserName" class="govuk-input" />
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>
            <div class="govuk-form-group">
                <label  class="govuk-label" asp-for="Input.Password"></label>
                <input asp-for="Input.Password"  class="govuk-input" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="govuk-form-group">
                <label class="govuk-label" asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="govuk-input" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="govuk-button">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
